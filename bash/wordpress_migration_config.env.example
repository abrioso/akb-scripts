# Server SSH access
SRC_SSH="user@old_server"
DST_SSH="user@new_server"

# WordPress file locations
SRC_DIR="/var/www/html"
DST_DIR="/home/www/htdocs"
LOCAL_TMP_DIR="/tmp/wordpress_site"

# Database credentials and names
SRC_DB_NAME="wordpress_multisite"
SRC_DB_USER="wp_user_src"
SRC_DB_PASS="wp_pass_src"

DST_DB_NAME="wordpress_multisite"
DST_DB_USER="wp_user_dst"
DST_DB_PASS="wp_pass_dst"
# Database host for destination (e.g. 'localhost' or an IP/hostname)
DST_DB_HOST="localhost"

# Dump file path
DUMP_FILE="/tmp/wordpress_multisite.sql"

# Ownership of files on destination server
DST_FILES_OWNER="www-data"

# URL changes
OLD_URL="https://oldsite.example.com"
NEW_URL="https://newsite.example.com"

# Path changes
OLD_PATH="/var/www/html"
NEW_PATH="/home/www/htdocs"

# Note: For multisite, DOMAIN_CURRENT_SITE in wp-config.php usually expects the bare domain
# (example.com) rather than the full URL (https://example.com). Adjust NEW_URL or
# wp-config.php accordingly after migration if needed.
